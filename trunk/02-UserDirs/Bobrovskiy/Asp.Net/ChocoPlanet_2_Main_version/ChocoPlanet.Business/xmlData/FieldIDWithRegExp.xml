<?xml version="1.0" encoding="utf-8" ?>
<Expressions>  
  <Expression>
    <FieldID>tbName</FieldID>
    <RegExp>^[а-яА-Яіїє^ы^ё^Ё^Э^э]{2,40}$</RegExp>
    <ErrorMessage>Ім'я не відповідає формату</ErrorMessage>
  </Expression>
  <Expression>
    <FieldID>tbThirdName</FieldID>
    <RegExp>^[а-яА-Яіїє^ы^ё^Ё^Э^э]{2,40}$</RegExp>
    <ErrorMessage>Прізвище не відповідає формату</ErrorMessage>
  </Expression>
  <Expression>
    <FieldID>tbSurname</FieldID>
    <RegExp>^[а-яА-Яіїє^ы^ё^Ё^Э^э]{2,40}$</RegExp>
    <ErrorMessage>По батькові не відповідає формату</ErrorMessage>
  </Expression>
  <Expression>
    <FieldID>tbLogin</FieldID>
    <RegExp>\w{5,25}</RegExp>
    <ErrorMessage>Логін не відповідає формату</ErrorMessage>
  </Expression>
  <Expression>
    <FieldID>tbPassword</FieldID>
    <RegExp>^(?=.{8,})(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*\W)$</RegExp>
    <ErrorMessage>Пароль не відповідає формату</ErrorMessage>
  </Expression>
  <Expression>
    <FieldID>tbPasswordConfirmation</FieldID>
    <RegExp>^(?=.{8,})(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9])(?=.*\W)$</RegExp>
    <ErrorMessage>Підтвердження паролю не відповідає формату</ErrorMessage>
  </Expression>  
  <Expression>
    <FieldID>tbEmail</FieldID>
    <RegExp>/^((&quot;[\w-\s]+&quot;)|([\w-]+(?:\.[\w-]+)*)|(&quot;[\w-\s]+&quot;)([\w-]+(?:\.[\w-]+)*))(@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$)|(@\[?((25[0-5]\.|2[0-4][0-9]\.|1[0-9]{2}\.|[0-9]{1,2}\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\]?$)/i</RegExp>
    <ErrorMessage>Скринька не відповідає формату</ErrorMessage>
  </Expression>
  <Expression>
    <FieldID>tbPhone</FieldID>
    <RegExp>^(['(']{1}\d{3}[')']{1}\s{1}\d{2}\s{1}\d{2}\s{1}\d{3}[';']{1}\s{0,1}){1,3}$</RegExp>
    <ErrorMessage>Телефон не відповідає формату</ErrorMessage>
  </Expression>   
</Expressions>
