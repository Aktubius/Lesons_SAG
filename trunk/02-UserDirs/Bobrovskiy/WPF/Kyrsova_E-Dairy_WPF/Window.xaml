      	</StackPanel>
      </Border>
        
    	<Border 
    		Padding="10" 
    		CornerRadius="5" 
    		BorderBrush="DarkGray"
    		BorderThickness="1" 
            VerticalAlignment="Top"
            Height="145"
            Margin="-0.834,208.84,1.166,0" 
			MinWidth="229.102" MaxWidth="229.102" 
			Width="230" ClipToBounds="True">
            
    		<StackPanel 
    			Orientation="Vertical" 
                Margin="-5,0,-3,-0.5" 
                VerticalAlignment="Bottom" 
                Height="130" Width="215">
    			<TextBlock 
    				Text="Statistics" 
    				Height="19" 
    				Margin="3" HorizontalAlignment="Center"/>
    			<TextBlock 
    				Text="Today:" 
    				Height="19" 
    				Margin="3"/>
    			<TextBlock 
    				Text="Tomorrow:" 
    				Height="19" 
    				Margin="3,3,0,3" HorizontalAlignment="Left" Width="209.102"/>
    			<TextBlock 
    				Text="Declined:" 
    				Height="19" 
    				Margin="3"/>
    			<TextBlock 
    				Text="Done: " 
    				Height="19" 
    				Margin="3"/>
    		</StackPanel>
    	</Border>
    	<Border 
    		Padding="10" 
    		CornerRadius="5" 
			 MaxWidth="229.102"
    		BorderBrush="DarkGray"
    		BorderThickness="1" Grid.Row="1" 
			VerticalAlignment="Top" Height="89.91" Margin="0,-1.336,0,0"
			 HorizontalAlignment="Left" Width="230">
    		<StackPanel 
    			Orientation="Vertical" Margin="-5,0,-3,-3" VerticalAlignment="Bottom" Height="74.28">
    			<TextBlock 
    				Text="Navigation" 
    				Height="19" 
    				Margin="3" HorizontalAlignment="Center"/>
    			<TextBlock 
    				Text="Tommorow:" 
    				Height="19" 
    				Margin="3"/>
    			<TextBlock 
    				Text="Today:" 
    				Height="19" 
    				Margin="3"/>
    		</StackPanel>
    	</Border>
    	<Custom:Calendar
    		Margin="-0.791,21,1.123,0"
    		VerticalAlignment="Top"
    		MinWidth ="175"
    		FontSize="16"
    		Height="164.782"
    		IsTodayHighlighted="True" 
    		FontStretch="UltraExpanded" FontWeight="Bold" Focusable="True" RenderTransformOrigin="0.5,0.5" Fluent:KeyTip.VerticalAlignment="Top" Fluent:KeyTip.HorizontalAlignment="Left" Width="230" Foreground="#FFAB7272" OpacityMask="#FF473434" 
						 >
    		<Custom:Calendar.BorderBrush>
