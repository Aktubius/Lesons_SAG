          SnapsToDevicePixels="True" 
          Margin="0,-15,0,0" 
          x:Name="MainGrid"        	  
		  Height="568.5" 		 
		  ShowGridLines="True">
		  
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="230" MinWidth="230"/>
    		<ColumnDefinition Width="0.644*" MinWidth="100"/>
    	</Grid.ColumnDefinitions>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.623*"/>
    		<RowDefinition Height="0.156*"/>
    		<RowDefinition Height="0.221*"/>
    	</Grid.RowDefinitions>
    	
        
      <Border 
          Padding="10" 
          CornerRadius="5" 
          BorderBrush="DarkGray"
          BorderThickness="1" 
		  Grid.Row="1"
		  Name="ContentBorder" 
          Margin="-2.79,-1,0,0" 
		  Grid.Column="1" Grid.RowSpan="2" 
		  MinWidth="400.248" 
		  MinHeight="215"		 
          Height="215">
          
        <StackPanel 
      		Orientation="Horizontal" 
      		Margin="-3,5,0,-2">
			
      		<StackPanel 
      			Orientation="Vertical" 
      			Height="63.325" 
      			VerticalAlignment="Top">
      			<TextBlock 
      				Text="Title:" 
      				Height="19" 
      				Margin="3"/>
      			<TextBlock 
      				Text="Content:" 
      				Height="19" 
      				Margin="3"/>
      		</StackPanel>
		  
      		<StackPanel		
      			Orientation="Vertical" 
      			ClipToBounds="True" VerticalAlignment="Bottom" 
                Width="340" Height="189" >
      			<TextBox
      				Text="{Binding Current.Title}" 
