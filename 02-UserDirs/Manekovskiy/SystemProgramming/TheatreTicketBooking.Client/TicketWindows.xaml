<Window x:Class="TheatreTicketBooking.Client.TicketWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TicketWindows" Height="300" Width="300">
    <Grid>
        <TextBlock >Available ticket count</TextBlock>
        <TextBlock Text="{Binding ElementName=myPremier, Path=Name}"></TextBlock>

        <Label HorizontalAlignment="Center" Margin="129,-5,133,245">0</Label>
        <ListBox Name ="ListBox" >
            <ListBoxItem>Premier description</ListBoxItem>
            <ListBoxItem>Genre</ListBoxItem>
            <ListBoxItem>Name</ListBoxItem>
            <ListBoxItem>Price</ListBoxItem>
        </ListBox>

        <Button Margin="0,235,0,0" Click="Button_Click">GET TICKET</Button>
    </Grid>
</Window>
