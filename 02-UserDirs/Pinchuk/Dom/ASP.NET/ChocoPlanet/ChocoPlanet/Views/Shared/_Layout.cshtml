<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
      <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>  
   
        <script src="../../Scripts/swfupload.js"></script>
        <script src="../../Scripts/jquery-asyncUpload-0.1.js"></script>
       

 
<script  type="text/javascript">
    $(function () {
        $("#photo").makeAsyncUploader({
            upload_url: "/Product/GetFileName",
            flash_url: '/Scripts/swfupload.swf',
            button_image_url: '/Content/blankButton.png',
            disableDuringUpload: 'INPUT[type="submit"]'
        });
    });        
</script>
  
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    CHOCOPLANET</h1>
            </div>
             @if (!(ViewContext.Controller is ChocoPlanet.Controllers.CartController))
                {
                    Html.RenderAction("Summary", "Cart");
                }
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")                 
            </div>
          
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Домашня сторінка", "Index", "Home")</li>
                    <li>@Html.ActionLink("Каталог продукції", "ProductCatalog", "Product")</li>
                    <li>@Html.ActionLink("Про програму", "About", "Home")</li>
                    @if (Roles.IsUserInRole(HttpContext.Current.User.Identity.Name, "Администратори"))
                    {
                        <li>@Html.ActionLink("Адміністрування", "CategoryCatalog", "Category")</li>
                        <li>@Html.ActionLink("Замовлення", "Index", "Order")</li>
                        
                    }
                </ul>
            </div>
        </div>
        <div id="main">
           
                @RenderBody()
           
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
