<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DispatcherSample.Sample"
        Title="Sample" Height="300" Width="300" x:Name="self">
	<Grid>
		<DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
			<ProgressBar Height="20" Width="210" x:Name="prg" Margin="5" DockPanel.Dock="Bottom" />
			<Button Height="40" Width="100" Content="Start" Margin="5" x:Name="btnStart" Click="btnStart_Click" />
			<Button Height="40" Width="100" Content="Stop" Margin="5" x:Name="btnStop" Click="btnStop_Click" />
		</DockPanel>
	</Grid>
</Window>